<div class="form-group">
  <label for="title" class="control-label">
    {{t "kb:::CategoryModel::name"}}
  </label>
  <div>
    <input type="text" class="form-control" id="name" name="name" placeholder="{{t "kb:::CategoryModel::name"}}" value="{{name}}">
    <span class="help-block hidden"></span>
  </div>
</div>


<div class="form-group">
  <label for="body" class="control-label">
    {{t "kb:::CategoryModel::description"}}
  </label>
  <div>
    <textarea class="editor" id="description" name="description" data-editor-settings='{"styles":false, "lists": false, "table": false, "picture": false, "horizontalrule": false, "align": false, "source": false}'>{{description}}</textarea>
    <span class="help-block hidden"></span>
  </div>
</div>


{{#if slug}} {{!-- the slug is created serverside, and then the user can edit it --}}
  <div class="form-group">
    <label for="slug" class="control-label">
      {{t "kb:::CategoryModel::slug"}}
    </label>
    <div>
      <input type="text" class="form-control" id="slug" name="slug" placeholder="{{t "kb:::CategoryModel::slug"}}" value="{{slug}}" />
      <span class="help-block hidden"></span>
    </div>
  </div>
{{/if}}

<div class="form-group">
    <label for="weight" class="control-label">
      {{t "kb:::CategoryModel::weight"}}
    </label>
    <div>
      <input type="number" class="form-control" id="weight" name="weight" placeholder="{{t "kb:::CategoryModel::weight"}}" value="{{weight}}" min="0" step="1" pattern="\d*">
      <span class="help-block hidden"></span>

      <span class="help-control">
        {{t "kb:::The weight determines the order of apparition in the categories lists. The categories with a higher weight appear before."}}
      </span>
    </div>
  </div>
