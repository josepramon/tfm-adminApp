<div class="form-group">
  <label for="name" class="control-label">
    {{t "tickets:::StatusModel::name"}}
  </label>
  <div>
    <input type="text" class="form-control" id="name" name="name" placeholder="{{t "tickets:::StatusModel::name"}}" value="{{name}}">
    <span class="help-block hidden"></span>
  </div>
</div>


<div class="form-group">
  <label for="body" class="control-label">
    {{t "tickets:::StatusModel::description"}}
  </label>
  <div>
    <textarea class="editor" id="description" name="description" data-editor-settings='{"styles":false, "lists": false, "table": false, "picture": false, "horizontalrule": false, "align": false, "source": false}'>{{description}}</textarea>
    <span class="help-block hidden"></span>
  </div>
</div>


<div class="form-group">
  <label for="order" class="control-label">
    {{t "tickets:::StatusModel::order"}}
  </label>
  <div>
    <input type="number" class="form-control" id="order" name="order" placeholder="{{t "tickets:::StatusModel::order"}}" value="{{order}}" min="0" step="1" pattern="\d*">
    <span class="help-block hidden"></span>
  </div>
</div>

