<div class="form-group">
  <label for="name" class="control-label">
    {{t "tickets:::CategoryModel::name"}}
  </label>
  <div>
    <input type="text" class="form-control" id="name" name="name" placeholder="{{t "tickets:::CategoryModel::name"}}" value="{{name}}">
    <span class="help-block hidden"></span>
  </div>
</div>


<div class="form-group">
  <label for="body" class="control-label">
    {{t "tickets:::CategoryModel::description"}}
  </label>
  <div>
    <textarea class="editor" id="description" name="description" data-editor-settings='{"styles":false, "lists": false, "table": false, "picture": false, "horizontalrule": false, "align": false, "source": false}'>{{description}}</textarea>
    <span class="help-block hidden"></span>
  </div>
</div>


<div class="form-group">
  <label for="managers" class="control-label">
    {{t "tickets:::CategoryModel::managers"}}
  </label>
  <div>

    <ul>
      {{#each allManagers}}
        <li class="checkbox">
          <label>
            <input type="checkbox" name="assignedManagers[]" value="{{id}}" {{#inArray ../managers id}}checked{{/inArray}} />
            <a class="label image manager" href="#managers/{{id}}/edit">
              {{#with profile}}
                {{#and image image.url}}
                  <img src="{{ image.url }}" alt="" />
                {{else}}
                  <img src="{{ avatar }}" alt="" />
                {{/and}}
              {{/with}}
              {{username}}
              <span class="detail">{{email}}</span>
            </a>
          </label>
        </li>
      {{/each}}
    </ul>

    <span class="help-block hidden"></span>
  </div>
</div>

