// Tickets specific styles
// ---------------------------------------------


// Tickets main view
// ==================

#ticketsContainer
  margin-top: 20px

#ticketsBlock
  h3
    margin-top: 0
    padding-bottom: 15px
    font-size: 20px
    border-bottom: solid 1px #ddd
    color: #aaa


// tickets list
#ticketsList
  color: #888

  .sectionContainer
    padding: 0

  .gridFilter
    padding: 10px 0
    margin-bottom: 25px
    overflow: auto

    .search
      position: relative
      width: 250px
      float: right

      .clear
        position: absolute
        top: .3em
        right: 3em
        z-index: 10

  .backgrid
    td, td a
      white-space: normal

    .id
      width: 7em
    .tags
      width: 10em
    .category, .statuses, .updated_at, priority
      width: 8em


// make the grid content smaller
@media screen and (max-width: 600px)
  #ticketsList .backgrid
    font-size: smaller
    th
      width: auto !important
      &.sortable
        position: relative
        &:after
          position: absolute
          top: 1em
    td a
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis
      max-width: 200px



#ticketsNodataContainer
  display: none


// open|close tickets menu
#ticketsNav
  padding: 2px 0
  float: left
  text-align: center

  ul
    margin:  0
    padding: 0
    list-style: none

  li
    display: inline-block
    border-right: solid 1px #ddd

    &:last-child
      border-right: none

  button
    padding: 0
    margin: 0 5px

    &:before
      background-color: #ddd
      bottom: -5px

    &:active, &.active
      box-shadow: none
      &:before
        transform: scaleX(1)

    &[disabled]
      color: #ccc !important

  ul.toggle
    margin-top: 18px
    display: inline-block
    border-radius: 3px
    overflow: hidden
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1)

    li
      border: none
      display: inline
      float: left

    button
      margin: 0
      padding: .3em .8em
      border: 0
      border-radius: 0
      color: #fff
      background-color: #d2d2d2
      opacity: 1
      transition: all .5s

      &:before
        content: none

      &:active, &.active
        background-color: #5fc76b

      &[disabled]
        opacity: .2







// new ticket form
#ticketsCreate .note-editable
  min-height: 100px



// Ticket details view
// ====================
.ticket
  padding: 20px 10px

.ticket .main
  position: relative
  padding: 0 15px 20px
  margin-bottom: 20px

  header
    position: relative
    margin: 0 -15px 10px
    padding: 15px 10px
    padding-right: 5.5em
    min-height: 2em
    border-bottom: solid 1px #ddd

    h1, h3
      margin: 0
      font-size: 1.3em


.ticketBody
  min-height: 100px
  margin-bottom: 30px


.ticketComments,
.ticketActions
  border-top: solid 1px #ddd
  margin-left:  -15px
  margin-right: -15px
  padding: 20px 10px


.ticketComments
  min-height: 100px

  header
    padding: 0 !important
    margin:  0 !important
    background-color: transparent !important

    h5
      margin-top: 0

  .comments
    padding: 0
    list-style: none

  .comment
    display: table
    width: 100%
    margin-bottom: 10px
    background-color: #fff
    border-left: solid 3px $appTheme['logoBlue']
    border-radius: 2px
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1)

  .comment-meta,
  .comment-contents
    display: table-cell

  .comment-meta
    width: 120px
    min-height: 80px
    padding: 10px
    text-align: center
    vertical-align: middle
    border-right: 1px solid #efefef

    .img, em
      float: none

    em
      display: block
      font-style: normal

  .comment-contents
    padding: 20px


  .comment-private
    background-color: $appTheme['bgColorHighlightLight2']
    border-left-color: $appTheme['logoPink']
    .comment-contents
      position: relative
      &:before
        position: absolute
        top:   5px
        right: 8px
        content: '\f023'
        font-family: FontAwesome



.ticketActions
  text-align: right


@media screen and (max-width: 992px)
  .ticketActions
    position: fixed
    bottom: 0
    left: 0
    z-index: 10
    width: 100%
    margin: 0
    background: rgba(249, 249, 249, 0.93)



.ticketAttachments
  background: #fbfbfb
  padding: 5px 10px
  border-radius: 3px
  margin-top: 25px
  font-size: smaller
  box-shadow: inset 1px 1px 1px rgba(0,0,0,.08), inset -1px 0px 1px rgba(0,0,0,.08)

  ul
    list-style: none
    padding: 0

  .description
    padding-left: 1.4em
    color: #888
    margin: -.4em 0 1em



.ticket aside
  padding-left: 30px
  padding-right: 0

  .block
    padding-bottom: 30px
    margin-bottom:  30px
    border-bottom: dashed 1px #ccc

    &:last-child
      border-bottom: none

    h4, h4 a
      margin-bottom: 20px
      color: #aaa

  .collapsed .caret
    top: 0.2em
    border-top: 4px solid transparent
    border-right: none
    border-bottom: 4px solid transparent
    border-left: 4px dashed

  a[data-toggle]
    position: relative
    padding-left: 12px

    .caret
      position: absolute
      left: 0
      top: .4em



// details block (aside)
.ticketDetails
  dl
    margin: 0
    font-size: smaller

  dt, dd
    padding: 10px 0
    min-height: 3em

  dt
    font-weight: normal
    color: #ccc

    float: left
    clear: left
    width: 32%
    max-width: 8em

  dd
    border-bottom: solid 1px #eee

    &:last-child
      border-bottom: none


// other
.statusTimeline .date,
.comment-meta .date
    font-size: .8em
    color: #bbb

    &:before
      content: '\f017'
      font-family: FontAwesome
      margin-right: 4px

.statusTimeline .date
  position: absolute
  right: 0
  bottom: -20px
  margin-left: -40px


.ticketCode
  display: inline-block
  color: #888
  border: solid 1px #eee
  background-color: transparent

a .ticketCode
  color: #30b5e5
  &:before
    content: ''

.grid .ticketCode
  font-size: smaller


#user-details
  padding: 5px 8px
  margin-top: 15px
  background-color: #fff
  box-shadow: inset 1px 1px 1px rgba(0,0,0,.15), inset -1px 0px 1px rgba(0,0,0,.15)

  dl
    font-size: 90%
  dt, dd
    padding: 5px 0
